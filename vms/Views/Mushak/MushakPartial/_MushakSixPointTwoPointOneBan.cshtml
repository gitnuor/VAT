            </thead>
            <tbody style="text-align:center">
                @if (Model.PurchaseSaleCalcBook.Any())
                {
                    foreach (var type in Model.PurchaseSaleCalcBook)
                    {
                <tr>
                    <td class="text-right">@type.SlNo</td>
                    <td class="text-center">@StringGenerator.DateTimeToStringWithoutTime(type.TransactionTime)</td>
                    <td>@type.ProductName</td>
                    <td class="text-right">@StringGenerator.DecimalToCommaSeparated(type.InitialQty) (@type.MeasurementUnitName)</td>
                    <td class="text-right">@StringGenerator.DecimalToCommaSeparated(type.PurchaseQty) (@type.MeasurementUnitName)</td>
                    <td class="text-right">@StringGenerator.DecimalToCommaSeparated(type.PurchasePriceWithoutVat)</td>
                    <td class="text-right">@StringGenerator.DecimalToCommaSeparated(type.QtyAfterPurchase) (@type.MeasurementUnitName)</td>
                    @*<td class="text-right">@StringGenerator.DecimalToCommaSeparated(type.ProductPriceWithoutVatAfterPurchase)</td>*@
