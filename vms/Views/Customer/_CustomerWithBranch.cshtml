@model IEnumerable<vms.entity.models.ViewCustomerWithBranch>
@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.BranchName).Titled("Branch Name");
    columns.Add(model => model.BranchAddress).Titled("Branch Address");
    columns.Add(model => model.CustomerName).Titled("Customer Name");
    columns.Add(model => model.CustomerAddress).Titled("Address");
    columns.Add(model => model.CustomerBin).Titled("BIN");
    columns.Add(model => model.CustomerNid).Titled("NID");
    columns.Add(model => model.CustomerEmailAddress).Titled("Email");
    columns.Add(model => model.CustomerContactNo).Titled("Phone No");
    columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenuCustomerWithBranch", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable())