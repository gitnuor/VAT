@model IEnumerable<vms.entity.models.ViewCustomer>
@{
	ViewData["Title"] = "All Customers";

	var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
}

@section contentheader
{
	<div class="p-2 page-header d-flex">
		<div class="flex-grow-1">
			@ViewData["Title"]
		</div>
		<div class="d-flex justify-content-start">
			@if (UserAuthorization.Check(FeatureList.THIRD_PARTY_CUSTOMER_CAN_ADD, session.Rights))
			{
				<div class="me-1">
					<a asp-controller="CustomerLocal" asp-action="Create" class="btn btn-primary btn-sm"><i class="bi bi-plus"></i> Add Local Customer</a>
				</div>
				<div class="me-1">
					<a asp-controller="CustomerForeign" asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus"></i> Add Foreign Customer</a>
				</div>
			}
		</div>
	</div>
	<partial name="Customer/_CustomerSubLink"/>
}

<scrollable-grid-container>
	<partial name="_Index" model="Model" />
</scrollable-grid-container>