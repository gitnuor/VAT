@model vms.entity.models.CustomsAndVatcommissionarate
@{
    ViewData["Title"] = "Create";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        Add Customs And VAT Commissionerate
    </div>
}


<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create" class="form-horizontal" id="frmDamageCreate">
            <div class="form-body">


                <div class="form-group">
                    <label class="form-label">Customs & VAT Id : </label>
                    <div>
                        <input asp-for="CustomsAndVatcommissionarateId" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomsAndVatcommissionarateId" class="text-danger"></span>

                    </div>
                </div>





                <div class="form-group">
                    <label class="form-label">Name : </label>
                    <div>
                        <input asp-for="Name" class="form-control form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Name In Bangla : </label>
                    <div>
                        <input asp-for="NameInBangla" class="form-control form-control-sm" />
                        <span asp-validation-for="NameInBangla" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">District : </label>
                    <div>

                        @Html.DropDownListFor(x => Model.DistrictId, new SelectList(Model.Districts, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-control form-control-sm" })
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Address : </label>
                    <div>
                        <input asp-for="Address" class="form-control form-control-sm" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Operational Code : </label>
                    <div>
                        <input asp-for="OperationalCode" class="form-control form-control-sm" />
                        <span asp-validation-for="OperationalCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Operational Code 1st Digit : </label>
                    <div>
                        <input asp-for="OperationalCode1stDigit" class="form-control form-control-sm" />
                        <span asp-validation-for="OperationalCode1stDigit" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Operational Code 2nd Digit : </label>
                    <div>
                        <input asp-for="OperationalCode2ndDigit" class="form-control form-control-sm" />
                        <span asp-validation-for="OperationalCode2ndDigit" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Operational Code 3rd Digit : </label>
                    <div>
                        <input asp-for="OperationalCode3rdDigit" class="form-control form-control-sm" />
                        <span asp-validation-for="OperationalCode3rdDigit" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Operational Code 4th Digit : </label>
                    <div>
                        <input asp-for="OperationalCode4thDigit" class="form-control form-control-sm" />
                        <span asp-validation-for="OperationalCode4thDigit" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="text-right">
                <button type="submit" data-requiredconfirmation="true" class="btn btn-primary btn-sm"><i class="bi bi-check-lg"></i> Submit</button>
                <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="CustomsAndVatcommissionarate" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>


