@model IEnumerable<vms.entity.viewModels.ProductUsedInService.VmProductUsedInService>
@{
	ViewData["Title"] = "Customer Product In Service";
	var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
}

@section contentheader
{
	<div class="p-2 page-header d-flex">
		<div class="flex-grow-1">
			@ViewData["Title"]
		</div>
		<div class="d-flex justify-content-start">

			@if (UserAuthorization.Check(FeatureList.PRODUCT_USED_IN_SERVICE_LIST_CAN_ADD, session.Rights))
			{
				<div class="pr-1">
					<a href="@Url.Action("Create")" class="btn btn-primary btn-sm"><i class="bi bi-plus"></i> Add Product Used In Service</a>
				</div>
			}

		</div>
	</div>
}

<scrollable-grid-container>
	<partial name="_Index" model="Model"/>
</scrollable-grid-container>