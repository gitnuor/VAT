@model vms.entity.StoredProcedureModel.SpAddMushakReturnReturnedAmountInfo

@{
    ViewData["Title"] = "AddMushakReturnAmountInfo";
    
}
<div class="row">
    <div class="col-lg-12 mb-3">
        <h1 class="custom-page-title">Add Mushak Returned Amount Info</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <form asp-action="AddMushakReturnReturnedAmountInfo" class="form-horizontal">
            @Html.HiddenFor(c => c.MushakGenerationId)
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Return Amount from Closing VAT: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnAmountFromClosingVat" name="ReturnAmountFromClosingVat" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return From Closing VAT Cheque Bank: </label>
                    <div class="col-md-4">
                        <select id="ReturnFromClosingVatChequeBankId" name="ReturnFromClosingVatChequeBankId" class="form-control" asp-items="ViewBag.BankBranchId"></select>

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return Closing VAT Cheque No.: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnFromClosingVatChequeNo" name="ReturnFromClosingVatChequeNo" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return Closing VAT Cheque Date: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnFromClosingVatChequeDate" name="ReturnFromClosingVatChequeDate" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return Amount Closing SD: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnAmountFromClosingSd" name="ReturnAmountFromClosingSd" class="form-control" value="@Model.ReturnAmountFromClosingVat" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return Closing SD Cheque Bank: </label>
                    <div class="col-md-4">

                        <select id="ReturnFromClosingSdChequeBankId" name="ReturnFromClosingSdChequeBankId" class="form-control" asp-items="ViewBag.BankBranchId"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return From Closing SD Cheque No.: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnFromClosingSdChequeNo" name="ReturnFromClosingSdChequeNo" class="form-control"  />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Return From Closing SD Cheque Date: </label>
                    <div class="col-md-4">

                        <input type="text" id="ReturnFromClosingSdChequeDate" name="ReturnFromClosingSdChequeDate" class="form-control"  />
                    </div>
                </div>

            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" data-requiredconfirmation="true" class="btn  green">Submit</button>

                        <a href="~/MushakGenerations/Index" class="btn btn-info btn-sm">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{


    <script src="~/js/jquery-ui.js"></script>
    <script>

        $(document).ready(function () {

            $("#ReturnFromClosingSdChequeDate").datepicker();
            $("#ReturnFromClosingSdChequeDate").datepicker('option', 'dateFormat', 'dd M, yy');

            $("#ReturnFromClosingVatChequeDate").datepicker();
            $("#ReturnFromClosingVatChequeDate").datepicker('option', 'dateFormat', 'dd M, yy');

        });
    </script>
}

