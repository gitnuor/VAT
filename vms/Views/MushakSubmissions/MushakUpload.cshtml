@model vms.entity.viewModels.vmMushakUpload
@{
    ViewData["Title"] = "Mushak Upload";
}

@section contentheader
    {
    <div class="p-3 page-header">
        Upload Mushak File
    </div>
}
<div class="row">
    <div class="col-md-4 offset-4">
        <form enctype="multipart/form-data" asp-action="MushakUpload" class="form-horizontal"
              method="post">
            <div class="form-body">
                <div class="form-group mt-2">
                    <label asp-for="Year" class="form-label"></label>
                    <div class="custom-file small">
                        <input type="text" asp-for="Year" class="form-control form-control-sm" readonly>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Month" class="form-label"></label>
                    <div class="custom-file small">
                        <input type="text" asp-for="Month" class="form-control form-control-sm" readonly>
                    </div>
                </div>
                <div class="form-group mt-3 required">
                    <label asp-for="File" class="form-label"></label>
                    <div class="custom-file small">
                        <input type="file" asp-for="File" class="form-control form-control-sm">
                    </div>
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>

            </div>
            <div class="float-end mt-3">
                <button type="submit" data-requiredconfirmation="true" class="btn btn-primary btn-sm"><i class="bi bi-check"></i> Submit</button>
                <a asp-controller="MushakSubmissions" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>

            @*<div class="form-group mt-3">
                <label asp-for="File" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-4">
                    <div class="custom-file">
                        <input asp-for="File" class="form-control custom-file-input">

                    </div>

                    <div class="custom-file hidden">
                        <input asp-for="month" class="form-control custom-file-input">

                    </div>

                    <div class="custom-file hidden">
                        <input asp-for="year" class="form-control custom-file-input">

                    </div>
                </div>

                <div class="col-sm-2">
                    <button type="submit" class="btn btn-primary">Upload</button>
                </div>
            </div>*@
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}


