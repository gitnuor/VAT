@model vms.entity.models.Organization
@{
    ViewData["Title"] = "Create";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        Company Basic Info
    </div>
}


<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create" class="form-horizontal" id="frmusercreate">
            <div class="form-body">
                <div class="form-group ">
                    <label asp-for="Name"  >Name : </label>

                    <div>
                        <input asp-for="Name"  />
                        <span asp-validation-for="Name" ></span>
                    </div>

                </div>

                <div class="form-group mt-3">
                    <label asp-for="Code" >Code : </label>
                    <div>
                        <input asp-for="Code"  />
                        <span asp-validation-for="Code" ></span>

                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="VatregNo">VAT reg No : </label>
                    <div>
                        <input asp-for="VatregNo"  />
                        <span asp-validation-for="VatregNo" ></span>

                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label asp-for="Address">Address : </label>
                    <div>
                        <input asp-for="Address"  />
                        <span asp-validation-for="Address" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Mobile">Mobile : </label>
                    <div>
                        <input asp-for="Mobile"  />
                        <span asp-validation-for="Mobile" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="EmailAddress">Email Address : </label>
                    <div>
                        <input asp-for="EmailAddress"  />
                        <span asp-validation-for="EmailAddress" ></span>
                    </div>
                </div>


                <div class="form-group mt-3">
                    <label asp-for="Bin">Bin : </label>
                    <div>
                        <input asp-for="Bin"  />
                        <span asp-validation-for="Bin" ></span>

                    </div>
                </div>


                <div class="form-group mt-3">
                    <label asp-for="CertificateNo">Certificate No : </label>
                    <div>
                        <input asp-for="CertificateNo"  />
                        <span asp-validation-for="CertificateNo" ></span>

                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="EnlistedNo">Enlisted No : </label>
                    <div>
                        <input asp-for="EnlistedNo"  />
                        <span asp-validation-for="EnlistedNo" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="PostalCode">Postal Code : </label>
                    <div>
                        <input asp-for="PostalCode"  />
                        <span asp-validation-for="PostalCode" ></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label asp-for="SelectedCityId">City : </label>
                    <div>
                        @Html.DropDownListFor(model => Model.SelectedCityId, new SelectList(Model.CityIds, "Key", "Value", Model.SelectedCityId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="SelectedCityId" ></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label >Country : </label>
                    <div>
                        @Html.DropDownListFor(model => Model.SelectedCountryId, new SelectList(Model.CountryIds, "Key", "Value", Model.SelectedCountryId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="SelectedCountryId" ></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label asp-for="SelectedBusinessNatureId">Business Nature : </label>
                    <div>
                        @Html.DropDownListFor(model => Model.SelectedBusinessNatureId, new SelectList(Model.BusinessNatures, "Key", "Value", Model.SelectedBusinessNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="SelectedBusinessNatureId" ></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label asp-for="SelectedBusinessCategoryId">Business Category : </label>
                    <div>
                        @Html.DropDownListFor(model => Model.SelectedBusinessCategoryId, new SelectList(Model.BusinessCategories, "Key", "Value", Model.SelectedBusinessNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="SelectedBusinessCategoryId" ></span>
                    </div>
                </div>


                <div class="form-group required mt-3">
                    <label asp-for="SelectedFinancialActivityNatureId">Financial Activity : </label>
                    <div>
                        @Html.DropDownListFor(model => Model.SelectedFinancialActivityNatureId, new SelectList(Model.FinancialActivityNatures, "Key", "Value", Model.SelectedFinancialActivityNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="SelectedFinancialActivityNatureId" ></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label >VAT Responsible Person Name : </label>
                    <div>
                        <input asp-for="VatResponsiblePersonName"  />
                        <span asp-validation-for="VatResponsiblePersonName" ></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label asp-for="VatResponsiblePersonDesignation">VAT Responsible Person Designation : </label>
                    <div>
                        <input asp-for="VatResponsiblePersonDesignation"  />
                        <span asp-validation-for="VatResponsiblePersonDesignation" ></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label asp-for="VatResponsiblePersonEmailAddress">VAT Responsible Person User Name (Email Address): </label>
                    <div>
                        <input asp-for="VatResponsiblePersonEmailAddress"  />
                        <span asp-validation-for="VatResponsiblePersonEmailAddress" ></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label asp-for="VatResponsiblePersonMobileNo">Vat Person Mobile : </label>
                    <div>
                        <input asp-for="VatResponsiblePersonMobileNo"  />
                        <span asp-validation-for="VatResponsiblePersonMobileNo" ></span>
                    </div>
                </div>


                <div class="form-group required hidden">
                    <label asp-for="UserName">User Name : </label>
                    <div>
                        <input asp-for="UserName"  value="1234" />
                        <span asp-validation-for="UserName" ></span>
                    </div>
                </div>


                <div class="form-group required q_element mt-3">
                    <label asp-for="CustomsAndVatcommissionarateId">Customs &amp; VAT Commissionerate</label>
                    <div>

                        @Html.DropDownListFor(x => Model.CustomsAndVatcommissionarateId, new SelectList(Model.CustomsAndVatCommissionarates, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CustomsAndVatcommissionarateId" ></span>
                    </div>
                </div>



                <div class="form-group">
                   @*  <label > </label>
                    <div class="">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox col-md-12 text-left">
                                <input asp-for="IsActive" /> Is Active
                                <span asp-validation-for="IsActive" ></span>
                                <span></span>
                            </label>

                        </div>
                    </div> *@
                    <div class="form-check form-switch complex-form-checkbox">
                        <input type="checkbox" asp-for="IsActive" class="form-check-input">
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <span asp-validation-for="IsActive"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label > </label>
                    <div class="">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox col-md-12 text-left">
                                <input asp-for="IsDeductVatInSource" /> IsVDS?
                                <span asp-validation-for="IsDeductVatInSource" ></span>
                                <span></span>
                            </label>

                        </div>
                    </div>
                </div>

            </div>
        <div class="text-right mt-3 float-end">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Submit</button>
                <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="Organizations" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>



