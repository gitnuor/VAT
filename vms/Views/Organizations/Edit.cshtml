@model vms.entity.models.Organization
@{
    ViewData["Title"] = "Edit";

}
@section contentheader
    {
    <div class="p-3 page-header">
        Edit Organization
    </div>
}

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Edit" class="form-horizontal" id="frmusercreate">
            <input type="hidden" asp-for="EncryptedId" />
            <input type="hidden" asp-for="OrganizationId" />
            <div class="form-body">
                <div class="form-group ">
                    <label asp-for="Name">Name</label>
                    <div>
                        <input asp-for="Name"  />
                        <span asp-validation-for="Name" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Code" >Code</label>
                    <div>
                        <input asp-for="Code"  />
                        <span asp-validation-for="Code" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="VatregNo">VAT reg No</label>
                    <div>
                        <input asp-for="VatregNo"  />
                        <span asp-validation-for="VatregNo" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Address">Address</label>
                    <div>
                        <input asp-for="Address"  />
                        <span asp-validation-for="Address" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="Mobile" asp-for="Mobile"></label>
                    <div>
                        <input asp-for="Mobile"  />
                        <span asp-validation-for="Mobile" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="EmailAddress"></label>
                    <div>
                        <input asp-for="EmailAddress"  />
                        <span asp-validation-for="EmailAddress" ></span>
                    </div>
                </div>


                <div class="form-group mt-3">
                    <label asp-for="Bin">Bin</label>
                    <div>
                        <input asp-for="Bin"  />
                        <span asp-validation-for="Bin" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="CertificateNo" >Certificate No.</label>
                    <div>
                        <input asp-for="CertificateNo"  />
                        <span asp-validation-for="CertificateNo" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="EnlistedNo">Enlisted No.</label>
                    <div>
                        <input asp-for="EnlistedNo"  />
                        <span asp-validation-for="EnlistedNo" ></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="PostalCode">Postal Code</label>
                    <div>
                        <input asp-for="PostalCode"  />
                        <span asp-validation-for="PostalCode" ></span>
                    </div>
                </div>

                <div class="form-group  mt-3">
                    <label class="form-label">City</label>
                    <div>
                        @Html.DropDownListFor(model => Model.CityId, new SelectList(Model.CityIds, "Key", "Value", Model.CityId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CityId" ></span>
                    </div>
                </div>
                <div class="form-group  mt-3">
                    <label class="form-label">Country</label>
                    <div>
                        @Html.DropDownListFor(model => Model.CountryId, new SelectList(Model.CountryIds, "Key", "Value", Model.CountryId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CountryId" ></span>
                    </div>
                </div>
                <div class="form-group  mt-3">
                    <label class="form-label">Business Nature</label>
                    <div>
                        @Html.DropDownListFor(model => Model.BusinessNatureId, new SelectList(Model.BusinessNatures, "Key", "Value", Model.BusinessNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="BusinessNatureId" ></span>
                    </div>
                </div>

                <div class="form-group  mt-3">
                    <label class="form-label">Business Category</label>
                    <div>
                        @Html.DropDownListFor(model => Model.BusinessCategoryId, new SelectList(Model.BusinessCategories, "Key", "Value", Model.BusinessCategoryId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="BusinessCategoryId" ></span>
                    </div>
                </div>


                <div class="form-group  mt-3">
                    <label class="form-label">Financial Activity</label>
                    <div>
                        @Html.DropDownListFor(model => Model.FinancialActivityNatureId, new SelectList(Model.FinancialActivityNatures, "Key", "Value", Model.FinancialActivityNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="FinancialActivityNatureId" ></span>
                    </div>
                </div>

                <div class="form-group  mt-3">
                    <label asp-for="VatResponsiblePersonName">VAT Responsible Person Name</label>
                    <div>
                        <input asp-for="VatResponsiblePersonName"  />
                        <span asp-validation-for="VatResponsiblePersonName" ></span>
                    </div>
                </div>

                <div class="form-group  mt-3">
                    <label asp-for="VatResponsiblePersonDesignation">VAT Responsible Person Designation</label>
                    <div>
                        <input asp-for="VatResponsiblePersonDesignation"  />
                        <span asp-validation-for="VatResponsiblePersonDesignation" ></span>
                    </div>
                </div>

                <div class="form-group  mt-3">
                    <label asp-for="VatResponsiblePersonEmailAddress">VAT Responsible Person Username (Email Address)</label>
                    <div>
                        <input asp-for="VatResponsiblePersonEmailAddress"  />
                        <span asp-validation-for="VatResponsiblePersonEmailAddress" ></span>
                    </div>
                </div>
                <div class="form-group  mt-3">
                    <label asp-for="VatResponsiblePersonMobileNo">Vat Person Mobile</label>
                    <div>
                        <input asp-for="VatResponsiblePersonMobileNo"  />
                        <span asp-validation-for="VatResponsiblePersonMobileNo" ></span>
                    </div>
                </div>


                <div class="form-group hidden">
                    <label asp-for="UserName">Username</label>
                    <div>
                        <input asp-for="UserName"  value="1234" />
                        <span asp-validation-for="UserName" ></span>
                    </div>
                </div>

                <div class="form-group required q_element mt-3">
                    <label class="form-label">Customs &amp; VAT Commissionerate</label>
                    <div>
                        @Html.DropDownListFor(x => Model.CustomsAndVatcommissionarateId, new SelectList(Model.CustomsAndVatCommissionarates, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CustomsAndVatcommissionarateId" ></span>
                    </div>
                </div>


                <div class="form-group">
                    <div class="form-check form-switch complex-form-checkbox">
                        <input type="checkbox" asp-for="IsActive" class="form-check-input">
                        <label asp-for="IsActive" class="form-check-label"></label>
                        <span asp-validation-for="IsActive"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check form-switch complex-form-checkbox">
                        <input type="checkbox" asp-for="IsDeductVatInSource" class="form-check-input">
                        <label asp-for="IsDeductVatInSource" class="form-check-label"></label>
                        <span asp-validation-for="IsDeductVatInSource"></span>
                    </div>
                </div>
            </div>
            <div class="text-right mt-3 float-end">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                <button type="button" value="Reset" class="btn  btn-warning btn-sm" onclick="location.reload();"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="Organizations" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>

    </div>
</div>

