@model vms.entity.viewModels.vmUsers

@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutForChangePassword.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Recover Password</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <form asp-action="ForgetPassword" class="form-horizontal">

            <div class="form-body">
                <h3 class="forgotpw">@ViewData["Message"]</h3>

                <div class="form-group">
                    <label class="col-md-3 control-label">Username: </label>
                    <div class="col-md-4">
                        <input asp-for="UserName" type="text" id="UserName" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" id="btnSubmit" class="btn  green"><i class="bi bi-check-lg"></i> Submit</button>
                        <a asp-controller="Authentication" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>