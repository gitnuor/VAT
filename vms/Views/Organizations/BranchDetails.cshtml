            @if ((int)ViewBag.PageCount <= 10)
            {

            }
            else
            {
               @* @Html.PagedListPager(
                    (IPagedList)Model,
                    page => Url.Action("BranchDetails", new { page })
                    )*@
            }

        </div>
        <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-chevron-double-left"></i> Back</a>
    </div>
</div>
