@model vms.entity.viewModels.ReportsViewModel.vmMushakReturnPaymentChallan
@{
    ViewData["Title"] = "Mushak Return Payment Challan";

    var firstElement = Model.ChallanList.First();
    
    Layout = "_LayoutMushak";
}


<style>

    .MreturnHeader {
        text-align: center;
        background-color: #ffedbe;
    }


    .Returntd {
        text-align: left; 
    }

    .Returntdhead {
        text-align: center;
        background-color: #cfcfcf;
    }

    .ReturntdEmpty {
        background-color: lightgray;
    }

    .tdp1 {
        width: 320px;
    }

    .tdp2 {
        width: 30px;
        text-align: center;
    }

    .report-margin {
        width: 90%;
        margin-left: auto;
        margin-right: auto;
    }
</style>

@section contentheader
    {
    <div class="p-3 page-header">
        @*<h5></h5>*@
        <div class="row">
            <div class="col-8">
                Mushak Return Payment Challan
            </div>
            <div class="col-4">
                <form method="post">

                    <input type="hidden" asp-for="MushakPaymentId" />
                    <div class="form-group float-end">
                        <button id="btnPrint" type="button" class="btn btn-sm btn-primary inline-sm-button"><i class="bi bi-printer-fill"></i> Print</button>
                        @*<button type="submit" asp-action="Mushok6P8ExportToExcel" class="btn btn-sm btn-warning inline-sm-button"><i class="bi bi-file-excel-fill"></i> Export Excel</button>*@
                        @*<button type="button" href="@Url.Action("DebitNoteView")" class="btn btn-info btn-sm inline-sm-button"><i class="bi bi-arrow-90deg-left"></i> Back</button>*@
                    </div>

                </form>
            </div>
        </div>

    </div>

}
<div class="report-section">

    <div class="report-margin" id="printableArea">
        <div class="row">
            <div class="col-12">
                <div class="mushak-name">১ম (মূল) কপি</div>
            </div>

            <partial name="_MushakReturnPaymentByChallan" model="Model" />

        </div>
        <div class="row print-page-break">
            <div class="col-12">
                <div class="mushak-name">২য় কপি
                </div>
            </div>

            <partial name="_MushakReturnPaymentByChallan" model="Model" />

        </div>
        <div class="row print-page-break">
            <div class="col-12">
                <div class="mushak-name">৩য় কপি</div>
            </div>

            <partial name="_MushakReturnPaymentByChallan" model="Model" />

        </div>
    </div>
</div>
@section Scripts{
   
    <script>

        $(document).ready(function () {
            $("#btnPrint").click(function () {
                window.vmsPrint.printA4Landscape('printableArea');

            });
        });

    </script>
}


