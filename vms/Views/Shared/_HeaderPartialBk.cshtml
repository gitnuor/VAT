                        <i class="fa fa-angle-down"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-default">
                        
                        <li>
                            <a href="@Url.Action("ChangePassword", "Users")" class="nav-link nav-toggle">
                                <i class="icon-lock"></i> Change Password
                            </a>
                        </li>
                        <li>
                            <a href="~/">
                                <i class="icon-key"></i> Log Out
                            </a>
                        </li>
                    </ul>
                </li>
                
            </ul>
