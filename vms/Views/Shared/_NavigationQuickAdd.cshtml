			</div>
			<div class="col-3">
				<div class="menu-heading">
					<i class="bi bi-shop"></i> Suppliers/Vendors
				</div>
				<ul>
					@if (UserAuthorization.Check(FeatureList.THIRD_PARTY_CUSTOMER_CAN_ADD, session.Rights))
					{
						<li>
							<a asp-controller="VendorLocal" asp-action="Create" class="text-decoration-none"><span class="font-weight-bold large">+</span> Add Local</a>
						</li>
						<li>
							<a asp-controller="VendorForeign" asp-action="Create" class="text-decoration-none"><span class="font-weight-bold large">+</span> Add Foreign</a>
