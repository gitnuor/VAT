<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - vms test</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/css/Search.css" rel="stylesheet" />
    <link href="~/css/GlobalMandatory.css" rel="stylesheet" />
    <link href="~/css/ThemeLayout.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <style>
        .form-group.required .control-label:after {
            content: "*";
            color: red;
        }

        .label-color {
            color: red;
        }

        input[aria-invalid='true'] {
            border: 1px solid red;
        }
    </style>

    <link rel="shortcut icon" href="~/favicon.ico" />
</head>
<body class="page-header-fixed page-sidebar-closed-hide-logo page-content-white">

    <div class="page-wrapper">
    </div>

    <partial name="_HeaderPartial" />
    <div class="clearfix"> </div>
    <div class="page-container">
        <div class="page-sidebar-wrapper fixed-left">
            <partial name="_LeftPanelPartial" />
        </div>
        <div class="page-content-wrapper">
            <div class="page-content">


                <div class="page-bar">
                    @RenderSection("breadcrumb", required: false)

                    <div class="page-toolbar">
                    </div>
                </div>

                @RenderBody()

            </div>

        </div>

    </div>
    <partial name="_FooterPartial" />
    <partial name="_Confirmation" />


    <script src="~/js/CorePlugins.js"></script>


    <script src="~/js/LevelPlugins.js"></script>
    <script src="~/js/toaster.js"></script>
    <link href="~/css/toastr.css" rel="stylesheet" />

    <script src="~/js/Global.js"></script>

    <script src="~/js/bootstrap-datetimepicker.min.js"></script>


    <environment include="Development">
        <script src="~/js/validation.js"></script>
    </environment>
    <environment include="Production">

        <script src="~/js/validation.min.js"></script>
    </environment>

    <script>
        $(function () {

            var url = window.location.pathname,
                urlRegExp = new RegExp(url.replace(/\/$/, '') + "$", 'i');
            $('a.nav-link').each(function () {
                if (urlRegExp.test(this.href.replace(/\/$/, ''), 'i')) {
                    $(this).parent().addClass('active');
                }
            });

            $("li.active").parent().parent(".nav-item").addClass("open active");
            $("li.active").parent().parent().parent().parent(".nav-item").addClass("open active");

        });
    </script>

    @RenderSection("Scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            $("[data-requiredconfirmation=true]").click(function (e) {

                var tag = '';
                var tagname = '';

                tag = this;
                tagname = $(tag).get(0).tagName.toLowerCase();
                $("#uxConfMessage").empty();
                $("#uxModalTitle").empty();
                $("#uxModalTitle").html($(tag).text());
                if (tagname == 'a') {
                    $("#uxConfMessage").html("You are about to " + $(tag).text() + " this");
                        $("#uxGlobalConfirmation").show();
                         e.preventDefault();
                        $("#uxModalBtnSave").click(function () {
                           if (tagname == "a") {
                                var actionUrl = $(tag).attr("href");
                                window.location = actionUrl;
                            }
                        });
                        $("button[data-dismiss='modal']").click(function () {
                            $("#uxGlobalConfirmation").hide();
                        });

                }
                else {
                    $(tag).closest('form').data("validator").settings.submitHandler = function (form) {

                    $("#uxConfMessage").html("You are about to " + $(tag).text() + " this");
                    $("#uxGlobalConfirmation").show();

                    $("#uxModalBtnSave").click(function () {
                        if (tagname == "button") {
                            form.submit();
                        }
                        else if (tagname == "a") {
                            var actionUrl = $(tag).attr("data-url");
                            window.location = actionUrl;
                        }
                    });
                    $("button[data-dismiss='modal']").click(function () {
                        $("#uxGlobalConfirmation").hide();
                    });

                    };
                }
            });
        });
        $(document).ready(function () {
            if ('@TempData["message"]' != null) {
                  if('@TempData["message"]' == "Success"){
                       toastr.success('Submitted Successsfully!');
                      }

                  else if ('@TempData["message"]' == 'Error') {
                      toastr.error('Can Not be Processed! Please Check');
                }
                else if ('@TempData["message"]' == 'InActive') {
                      toastr.success('In Active Successsfully!');
                }
                  else if ('@TempData["message"]' == 'Active') {
                      toastr.success('Active Successsfully!');
                }
                  else if ('@TempData["message"]' == 'Saved') {
                      toastr.success('Saved Successsfully!');
                }
                else if ('@TempData["message"]' == 'Updated') {
                      toastr.success('Updated Successsfully!');
                  }
            }
            $(".nav-item.active.open .arrow ").addClass("open");
        });
     function processForm(ele, arr) {
            var formID = ele.id; // <- the ID of the form
            if (formID != null && formID != undefined) {
                var form = $('#' + formID);                       // <- the form object
                $(form).find('.field-validation-error span').html('');
            }

            $(ele).find(':input').each(function () {

                switch (this.type) {
                    case 'password':
                    case 'select-multiple':
                    case 'select-one':
                    case 'text':
                        $(this).val('');
                        break;
                    case 'datetime-local':
                        $(this).val('@DefinedDateFormat.DateFormatForControl');
                        break;
                    case 'date':
                        $(this).val('@DefinedDateFormat.DateFormatForControl');
                        break;
                    case 'textarea':
                        $(this).val('');
                        break;
                    case 'number':
                        $(this).val('');
                        break;
                    case 'checkbox':

                        this.checked = false;
                    case 'radio':
                        this.checked = false;
                }
            });
        if (arr != null) {
            arr.forEach(function (item, index) {
                var spiltArr = item.split("+");
                if (spiltArr[0] == "checkbox") {
                    if (spiltArr[2] == "true") {
                        $('#' + spiltArr[1]).prop('checked', true);
                    }
                    else {
                        $('#' + spiltArr[1]).prop('checked', false);
                    }
                    //document.getElementById(spiltArr[1]).checked = spiltArr[2];
                   // console.log(spiltArr[1]);
                }
                else if (spiltArr[0] == "dropdown") {
                    $('#' + spiltArr[1]).val(spiltArr[2]);
                }
            });

        }
        }
    </script>
</body>
</html>