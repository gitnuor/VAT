@model vms.entity.models.MushakReturnRefund

@{
    ViewData["Title"] = "Create";
    
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Add Approved Refund</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddRefused" class="form-horizontal" id="frmusercreate">
            @Html.HiddenFor(c => c.MushakReturnRefundId)
            <div class="form-body">
                <div class="form-group required">
                    <label class="col-md-3 control-label"> Approved  VAT Amount: </label>
                    <div class="col-md-4">
                        <input asp-for="ApprovedToRefundVatamount" class="form-control" />
                    </div>
                </div>
                <div class="form-group required">
                    <label class="col-md-3 control-label"> Approved Sd Amount: </label>
                    <div class="col-md-4">
                        <input asp-for="ApprovedToRefundSdamount" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9 mb-3">
                        <button type="submit" data-requiredconfirmation="true" class="btn  green"><i class="bi bi-check-lg"></i> Submit</button>
                        <a href="~/MushakReturnRefund/Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>