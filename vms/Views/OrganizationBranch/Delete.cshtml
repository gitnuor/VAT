@model vms.entity.models.User

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Delete User</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Full Name : </label>
                    <div class="col-md-4">
                        <input asp-for="FullName" class="form-control" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Mobile : </label>
                    <div class="col-md-4">
                        <input asp-for="Mobile" class="form-control" readonly />

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Email : </label>
                    <div class="col-md-4">
                        <input asp-for="EmailAddress" class="form-control" readonly />

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"> </label>
                    <div class="col-md-9">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox">
                                <input type="checkbox" asp-for="IsActive">IsActive
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">

                        <button type="button" data-requiredconfirmation="true" class="btn  green">Submit</button>
                        <button type="button" class="btn grey-salsa btn-outline">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
