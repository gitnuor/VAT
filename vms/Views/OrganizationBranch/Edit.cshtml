                <div class="form-group required mt-3">
                    <label class="form-label">Branch Type</label>
                    <div>

                        @Html.DropDownListFor(x => Model.OrgBranchTypeId, new SelectList(Model.OrgBranchTypeList, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-select form-select-sm" })
