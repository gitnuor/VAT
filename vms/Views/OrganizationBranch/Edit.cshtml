                <div class="form-group required mt-3">
                    <label class="form-label">Country</label>
                    <div>
                        @Html.DropDownListFor(model => Model.CountryId, new SelectList(Model.CountryIds, "Key", "Value", Model.CountryId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CountryId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group required mt-3">
                    <label class="form-label">District</label>
                    <div>

                        @Html.DropDownListFor(x => Model.DistrictId, new SelectList(Model.DistrictList, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="DistrictId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label class="form-label">Business Nature</label>
                    <div>
                        @Html.DropDownListFor(model => Model.BusinessNatureId, new SelectList(Model.BusinessNatures, "Key", "Value", Model.BusinessNatureId), "Select", new { @class = "form-select form-select-sm" })
