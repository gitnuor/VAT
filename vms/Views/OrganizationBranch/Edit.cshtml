                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label class="form-label">Business Category</label>
                    <div>
                        @Html.DropDownListFor(model => Model.BusinessCategoryId, new SelectList(Model.BusinessCategories, "Key", "Value", Model.SelectedBusinessNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="BusinessCategoryId" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group required mt-3">
                    <label class="form-label">Financial Activity</label>
                    <div>
                        @Html.DropDownListFor(model => Model.FinancialActivityNatureId, new SelectList(Model.FinancialActivityNatures, "Key", "Value", Model.FinancialActivityNatureId), "Select", new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="FinancialActivityNatureId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label class="form-label">VAT Responsible Person Name</label>
