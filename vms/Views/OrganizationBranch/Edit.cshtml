                        <input asp-for="VatResponsiblePersonName" class="form-control form-control-sm" />
                        <span asp-validation-for="VatResponsiblePersonName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label class="form-label">VAT Person Designation</label>
                    <div>
                        <input asp-for="VatResponsiblePersonDesignation" class="form-control form-control-sm" />
                        <span asp-validation-for="VatResponsiblePersonDesignation" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group required mt-3">
                    <label class="form-label">VAT Person User Name (Email Address)</label>
                    <div>
                        <input asp-for="VatResponsiblePersonEmailAddress" class="form-control form-control-sm" />
                        <span asp-validation-for="VatResponsiblePersonEmailAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group required mt-3">
                    <label class="form-label">VAT Responsible Person Mobile</label>
                    <div>
                        <input asp-for="VatResponsiblePersonMobileNo" class="form-control form-control-sm" />
                        <span asp-validation-for="VatResponsiblePersonMobileNo" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group required hidden">
                    <label class="form-label">Username</label>
                    <div>
                        <input asp-for="UserName" class="form-control form-control-sm" value="1234" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group required q_element mt-3">
                    <label class="form-label">Customs &amp; VAT Commissionerate</label>
                    <div>

                        @Html.DropDownListFor(x => Model.CustomsAndVatcommissionarateId, new SelectList(Model.CustomsAndVatCommissionarates, "Id", "Name"), "Select", htmlAttributes: new { @class = "form-select form-select-sm" })
                        <span asp-validation-for="CustomsAndVatcommissionarateId" class="text-danger"></span>
                    </div>
                </div>



                <div class="form-group">
                    <label class="form-label"> </label>
                    <div class="">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox col-md-12 text-left">
                                <input asp-for="IsActive" /> Is Active
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                                <span></span>
                            </label>

                        </div>
                    </div>
                </div>
            </div>
            <div class="text-right mt-3 float-end">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                <button type="button" value="Reset" class="btn  btn-warning btn-sm" onclick="location.reload();"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="OrganizationBranch" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
