@model vms.entity.models.ProductCategory
@{
    ViewData["Title"] = "Create";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        Add Product Category
    </div>
}

<div class="row">
    <div class="col-md-4 offset-4">

        <form asp-action="Create" class="form-horizontal" id="frmusercreate">
            <div class="form-body">
                <div class="form-group">
                    <label asp-for="Name"> Name</label>
                    <div>
                        <input asp-for="Name"  />
                        <span asp-validation-for="Name" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="ReferenceKey"> Reference Key : </label>
                    <div>
                        <input asp-for="ReferenceKey"  maxlength="10" />

                    </div>
                </div>
            </div>
            <div class="float-end mt-3" >
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Submit</button>
                <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="ProductCategories" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>