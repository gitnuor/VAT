@model IEnumerable<vms.entity.models.ViewSubscriptionBill>
@{
	ViewData["Title"] = "Customer Subscriptions";

	var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
}

@section contentheader
{
	<div class="p-2 page-header d-flex">
		<div class="flex-grow-1">
			@ViewData["Title"]
		</div>
		<div class="d-flex justify-content-start">
			@if (UserAuthorization.Check(FeatureList.THIRD_PARTY_CUSTOMER_CAN_ADD, session.Rights))
			{
				<div class="me-1">
					<a asp-controller="SubscriptionBill" asp-action="InitializeBill" class="btn btn-primary btn-sm"><i class="bi bi-plus"></i> Generate Bill</a>
				</div>
				<div class="me-1">
					<a asp-controller="SubscriptionBill" asp-action="InitializeSendingBillToVat" class="btn btn-success btn-sm"><i class="bi bi-plus"></i> Send Bill To VAT</a>
				</div>
			}
		</div>
	</div>
}

<scrollable-grid-container>
	<partial name="_Index" model="Model" />
</scrollable-grid-container>