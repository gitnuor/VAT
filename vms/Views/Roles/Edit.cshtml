@model vms.entity.models.Role

@{
    ViewData["Title"] = "Edit";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        Edit Role
    </div>
}


<div class="row">
    <div class="col-md-4 offset-4">

        <form asp-action="Edit" class="form-horizontal" id="frmusercreate">
            <input type="hidden" asp-for="RoleId" />
            <input type="hidden" asp-for="EncryptedId" />
            <div class="form-body">
                <div class="form-group required">
                    <label asp-for="RoleName" >Role</label>
                    <div>
                        <input asp-for="RoleName"  />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>

                
                <div class="form-group">
                    <label class="form-label"> </label>
                    <div class="">
                        <div class="mt-checkbox-list">
                            <label class="mt-checkbox col-md-12 text-left">
                                <input asp-for="IsActive" /> Is Active?
                                <span></span>
                                <span asp-validation-for="IsActive" class="text-danger"></span>
                            </label>

                        </div>
                    </div>
                </div>
            </div>

            <div class="float-end mt-3">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                <button type="reset" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>