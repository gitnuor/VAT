@model vms.entity.viewModels.vmDivisionOrState

@{
    ViewData["Title"] = "Create Division";
    
}
@section contentheader
    {
<div class="p-3 page-header">
    Create Division
</div>
}



<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="Create" method="post" class="form-horizontal" id="frmusercreate">
            <div class="form-body">
                <div class="form-group">
                    <label  asp-for="CountryId"></label>
                    <div>
                        <select asp-for="CountryId" asp-items="Model.CountryList.CustomSelectListToSelectList()" >
                            <option value="@null">Select Country</option>
                        </select>                        
                        <span asp-validation-for="CountryId" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label  asp-for="DivisionOrStateName"></label>
                    <div>
                        <input asp-for="DivisionOrStateName"  />
                        <span asp-validation-for="DivisionOrStateName" ></span>
                    </div>
                </div>
                <div class="form-group mt-3">
                    <label  asp-for="DivisionOrStateShortName"></label>
                    <div>
                        <input asp-for="DivisionOrStateShortName"  />
                        <span asp-validation-for="DivisionOrStateShortName" ></span>
                    </div>
                </div>

            </div>

            <div class="float-end mt-3">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Submit</button>
                <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>


        </form>
    </div>
</div>

