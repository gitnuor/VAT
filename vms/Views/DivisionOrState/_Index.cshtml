@model IEnumerable<vms.entity.models.DivisionOrState>

@(Html.Grid(Model).Build(columns =>
{
	columns.Add(model => model.DivisionOrStateName).Titled("Name");
	columns.Add(model => model.DivisionOrStateShortName).Titled("Short Name");
	columns.Add(model => model.Country.Name).Titled("Country");
	columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenu", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable()
)
