@model vms.entity.models.CustomerSubscriptionCategory
@{
	var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
}

<div class="nav navbar-nav">
	<div class="dropdown dropdown-freeze-grid-action">
		<a href="#" class="" data-bs-toggle="dropdown" data-close-others="true">
			<i class="text-dark bi bi-three-dots-vertical"></i>
		</a>
		<ul class=" dropdown-menu dropdown-menu-right div-with-arrow-right-top">
			
				<li>
					<a class="dropdown-item" asp-action="Edit" asp-route-id="@Model.EncryptedId"><i class="bi bi-pencil-square"></i> Edit</a>
				</li>			
				@if (Model.IsActive == true)
				{
					<li>
					<a class="dropdown-item" href="CustomerSubscriptionCategory/ChangeCustomerSubscripCategoryStatus/@Model.EncryptedId" type="button" data-requiredconfirmation="true"><i class="bi bi-exclamation-diamond"></i> Inactive</a>
					</li>
				}
				else
				{
					<li>
					<a class="dropdown-item" href="CustomerSubscriptionCategory/ChangeCustomerSubscripCategoryStatus/@Model.EncryptedId" type="button" data-requiredconfirmation="true"><i class="bi bi-check-circle"></i> Active</a>
					</li>
				}
			
		</ul>
	</div>
</div>