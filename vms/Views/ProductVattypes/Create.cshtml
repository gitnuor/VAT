@model vms.entity.models.ProductVattype
@{
    ViewData["Title"] = "Add Product VAT Type";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        @ViewData["Title"]
    </div>
}

<div class="row">
    <div class="col-md-4 offset-4">

        <form asp-action="Create" class="form-horizontal" id="frmusercreate">
            <div class="form-body">
                <div class="form-group required">
                    <label class="form-label">Name</label>
                    <div>
                        <input asp-for="Name" class="form-control form-control-sm" autocomplete="off" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group required">
                    <label class="form-label">Default VAT (%)</label>
                    <div>
                        <input asp-for="DefaultVatPercent" class="form-control  form-control-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                
            </div>
            <div class="text-right">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Submit</button>
                <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="ProductVatTypes" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
            
        </form>
    </div>
</div>