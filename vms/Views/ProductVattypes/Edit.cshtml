@model vms.entity.models.ProductVattype

@{
    ViewData["Title"] = "Edit";
    
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Edit Product Vat type</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">

        <form asp-action="Edit" class="form-horizontal" id="frmusercreate">
            <div class="form-body">
                <input type="hidden" asp-for="ProductVattypeId" />
                <div class="form-group">
                    <label class="col-md-3 control-label">Name</label>
                    <div class="col-md-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Default VAT (%)</label>
                    <div class="col-md-4">
                        <input asp-for="DefaultVatPercent" class="form-control" />
                    </div>
                </div>
                
            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">
                        <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                        <button type="button" value="Reset" class="btn  btn-warning btn-sm" onclick="location.reload();"><i class="bi bi-arrow-repeat"></i> Reset</button>
                        <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>