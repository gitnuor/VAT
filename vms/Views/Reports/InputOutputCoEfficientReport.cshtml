@model vms.entity.viewModels.ReportsViewModel.VmInputOutputCoEfficientReport
@{
    var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
    Layout = "_LayoutReport";
    ViewData["Title"] = "Input Output CoEfficient Report";
}

@section contentheader
    {
    <div class="p-3 page-header">
        @ViewData["Title"]
    </div>
}


<div class="row">
    <div class="col-md-6 offset-3">
        <form asp-action="InputOutputCoEfficientReport" class="form-horizontal" target="_blank">
            <div class="form-group mt-3">
                <label asp-for="ProductId" ></label>
                <select asp-for="ProductId" asp-items="Model.ProductList.CustomSelectListToSelectList()" >
                    <option value="@null">Select</option>
                </select>
                <span asp-validation-for="ProductId" class="invalid-feedback"></span>
            </div>

            <div class="form-group mt-3">
                <label  asp-for="ReportProcessOptionId"></label>
                <div>
                    <select asp-for="ReportProcessOptionId" asp-items="Model.ReportOptionSelectListItems.CustomSelectListToSelectList()" >
                        <option value="@null">Select Option</option>
                    </select>
                    <span asp-validation-for="ReportProcessOptionId" ></span>
                </div>
            </div>
            <div class="form-group mt-3 float-end">
                <button type="submit" class="btn btn-sm btn-primary"> <i class="bi bi-file-text"></i> Process Report</button>
            </div>
        </form>
    </div>
</div>




