@model IEnumerable<vms.entity.StoredProcedureModel.MushakReturn.MushakReturnSubFormChha>

<table class="table table-bordered">

   

        <tr class="MreturnHeader" style="background-color: #FBD4B4!important">

            <th>SL</th>
            <th>
                Treasury Challan Number
            </th>

            <th>
                Bank
            </th>

            <th>
               Branch
            </th>
            <th>
               Date
            </th>
            <th>
                Tax Deposit Account Code
            </th>
            <th>
                Amount
            </th>

            <th>Remarks</th>
        </tr>
   
        @if (Model.Any())
        {

            foreach (var item in Model)
            {
                <tr>

                    <td>@item.SlNo</td>
                    <td>@item.TreasuryChallanNo</td>
                    <td>@item.BankNameInBangla</td>
                    <td>@item.BankBranchNameInBangla</td>
                    <td>@StringGenerator.DateTimeToString(item.SubimissionDate, false)</td>
                    <td>@item.EconomicCode</td>
                    <td class="text-right" style="text-align:right !important">@StringGenerator.DecimalToCommaSeparated(item.PaidAmount)</td>
                    <td></td>
                </tr>

            }
        }
  
        <tr class="MreturnHeader" style="background-color: #FBD4B4!important">

            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th class="text-right" style="text-align:right !important">Total</th>
            <th class="text-right" style="text-align:right !important">@StringGenerator.DecimalToCommaSeparated(Model.Sum(c => c.PaidAmount))</th>
            <th></th>
        </tr>
   
</table>