@model vms.entity.StoredProcedureModel.MushakReturn.MushakReturnPartEleven
<table class="table table-bordered">
    @*<thead>*@

        <tr>

            <th class="Returntdhead" colspan="4" style="background-color: #FBD4B4!important">

                <div class="parthead">Part-11: REFUND </div>
            </th>
        </tr>
    @*</thead>
    <tbody class="Returntd">*@

        <tr>
            <td rowspan="3">I am interested to get refund of my Closing Balance</td>
            <td style="text-align:center !important">Item</td>
            <td style="text-align:center !important">Note</td>
            <td style="text-align:right !important">

                <div class="form-check">
                    <input type="checkbox" class="form-check-input" style="float: revert;" id="IsWantToGetBackClosingAmountYes" disabled="disabled" checked="@Model.IsWantToGetBackClosingBalance">
                    <label class="form-check-label" for="IsWantToGetBackClosingAmountYes">Yes</label>
                    
                    <input type="checkbox"  checked="@(!Model.IsWantToGetBackClosingBalance)">
                    <label class="form-check-label" for="IsWantToGetBackClosingAmountNo">No</label>
                </div>
            </td>
        </tr>

        <tr>

            <td>Requested Amount for Refund (VAT)</td>
            <td class="text-center" style="text-align:center !important">৬৭</td>
            <td class="manual text-right" style="text-align:right !important">@StringGenerator.DecimalToCommaSeparated(Model.ClaimedRefundVatAmount)</td>
        </tr>
        <tr>

            <td>Requested Amount for Refund (SD)</td>
            <td class="text-center" style="text-align:center !important">৬৮</td>
            <td class="manual text-right" style="text-align:right !important">@StringGenerator.DecimalToCommaSeparated(Model.ClaimedRefundSDAmount)</td>
        </tr>
    @*</tbody>*@

</table>