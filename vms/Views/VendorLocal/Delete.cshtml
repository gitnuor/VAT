@model vms.entity.models.Vendor

@{
    ViewData["Title"] = "Delete";
    
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="custom-page-title">Delete Vendor</h1>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete" class="form-horizontal">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendorId" />
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Name : </label>
                    <div class="col-md-4">
                        <input asp-for="Name" class="form-control" readonly />

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label">Contact No : </label>
                    <div class="col-md-4">
                        <input asp-for="ContactNo" class="form-control" readonly />

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Address : </label>
                    <div class="col-md-4">
                        <input asp-for="Address" class="form-control" readonly />

                    </div>
                </div>
                

            </div>

            <div class="form-actions">
                <div class="row">
                    <div class="col-md-offset-3 col-md-9">

                        <button type="button" data-requiredconfirmation="true" class="btn  green">Submit</button>
                        <button type="button" class="btn grey-salsa btn-outline">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
