@model IEnumerable<vms.entity.models.VehicleType>
@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.VehicleTypeName).Titled("Type Name");
    columns.Add(model => model.ShortDescription).Titled("Description");
    columns.Add(model => model.RegistrartionStatus).Titled("Is Require Registration?");
    columns.Add(model => model.Status).Titled("Status");
	columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenu", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable())