@model vms.entity.models.PurchaseReason
@{
    ViewData["Title"] = "Edit";
    
    
}
@section contentheader
    {
    <div class="p-3 page-header">
        Edit Purchase Reason
    </div>
}


<div class="row">
    <div class="col-md-4 offset-4">

        <form asp-action="Edit" class="form-horizontal" id="frmusercreate">
            <input type="hidden" asp-for="PurchaseReasonId" />
            <div class="form-body">
                <div class="form-group">
                    <label class="form-label">Reason : </label>
                    <div>
                        <input asp-for="Reason" class="form-control form-control-sm" />
                        <span asp-validation-for="Reason" class="text-danger"></span>

                    </div>
                </div>

            </div>

            <div class="text-right">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                <button type="button" value="Reset" class="btn  btn-warning btn-sm" onclick="location.reload();"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-controller="PurchaseReasons" asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>