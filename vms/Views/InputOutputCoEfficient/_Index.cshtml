@model IEnumerable<vms.entity.models.Product>

@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.Name).Titled("Name");
    columns.Add(model => model.ProductType.Name).Titled("Type");
    columns.Add(model => model.CategoryName).Titled("Category");
	columns.Add(model => model.ModelNo).Titled("Model");
	columns.Add(model => model.Code).Titled("Code");
    columns.Add(model => model.Hscode).Titled("HS/Service Code");
	columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenu", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable())