@model vms.entity.viewModels.vmProductPriceSetup

@{
    ViewData["Title"] = "Add Submission";
}

<div class="row">
    <div class="col-lg-12 mb-3">
        <h1 class="custom-page-title">Product Submission</h1>
    </div>
</div>

<div class="row">

    <div class="col-md-12 ">
        <div class="col-md-5 ">

            <div class="col-md-12 ">
                <div class="form-group">

                    Product Name : @Model.Name
                </div>
            </div>

            <div class="col-md-12 ">
                <div class="form-group">

                    Code : @Model.Code
                </div>
            </div>
            <div class="col-md-12 ">
                <div class="form-group">
                    HS Code : @Model.Hscode
                </div>
            </div>

            <div class="col-md-12 ">
                <div class="form-group ">

                    Is Active : @Model.IsActive
                </div>
            </div>
        </div>

        <div class="col-md-5 ">
            <div class="col-md-12 ">
                <div class="form-group">

                    Company Name : @Model.OrganizationName
                </div>
            </div>
            <div class="col-md-12 ">
                <div class="form-group">

                    Measurement Unit : @Model.MeasurementUnitName
                </div>
            </div>

            <div class="col-md-12 ">
                <div class="form-group">

                    Product Group : @Model.ProductGroupName
                </div>
            </div>
            <div class="col-md-12 ">
                <div class="form-group">

                    Product Category : @Model.ProductCategoryName
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-12 mt-3">

        <h4> Price Setup</h4>
        <table class="table table-bordered" id="gridTable">
            <thead>
                <tr>

                    <th class="width150">Product Name</th>
                    <th class="width150">M. Unit</th>
                    <th class="width100">Sale Unit Price</th>

                </tr>
            </thead>

            <tbody id="tblPriceSetup">
                @if (Model.PriceSetups.Any())
                {
                    foreach (var modelPriceSetup in Model.PriceSetups)
                    {
                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.MeasurementUnitName</td>
                            <td>@modelPriceSetup.SalesUnitPrice</td>
                        </tr>

                    }
                }
            </tbody>


        </table>
    </div>

    <h3>Add Submission Info</h3>
    <form asp-action="AddSubmissionIndex" class="form-horizontal">
        <input asp-for="ProductId" class="form-control hidden" />
        <div class="form-body">
            <div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Submission Date : </label>
                    <div class="col-md-3">
                        <input type="date" asp-for="MushakSubmissionDate" min="@(DateTime.Today.AddDays(-90).ToString("yyyy-MM-dd"))" max="@(DateTime.Today.ToString("yyyy-MM-dd"))" required class="form-control form-control-sm" />
                        <span asp-validation-for="MushakSubmissionDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9 mt-2">

                    <button type="submit" data-requiredconfirmation="true" class="btn  btn-sm btn-success"><i class="bi bi-check-lg"></i> Submit</button>
                    <a href="@Url.Action("Index")" class="btn btn-sm btn-secondary"><< Back</a>
                </div>
            </div>
        </div>
    </form>

</div>

