		<div class="col-sm-8">
			<input type="date" asp-for="BillOfEntryDate" min='2000-01-01' max='2050-12-12' class="form-control form-control-sm">
			<span asp-validation-for="BillOfEntryDate" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label asp-for="DueDate" class="col-sm-4 col-form-label"></label>
		<div class="col-sm-8">
			<input type="date" asp-for="DueDate" min='2000-01-01' max='2050-12-12' class="form-control form-control-sm">
			<span asp-validation-for="DueDate" class="text-danger"></span>
