			</select>
			<span asp-validation-for="VendorId" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="VendorInvoiceNo" class="col-sm-4 col-form-label"></label>
		<div class="col-sm-8">
			<input type="text" asp-for="VendorInvoiceNo" class="form-control form-control-sm">
