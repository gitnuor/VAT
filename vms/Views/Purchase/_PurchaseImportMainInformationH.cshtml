@model vms.entity.viewModels.VmPurchaseImport

<div class="font-weight-bold mb-3">
	Main Information
</div>
<form method="post" class="g-3" id="frmMainInformation">
	<div class="row mb-3">
		<label asp-for="OrgBranchId" class="col-sm-4 col-form-label"></label>
		<div class="col-sm-8">
			<select asp-for="OrgBranchId" asp-items="Model.OrgBranchList.CustomSelectListToSelectList()" class="searchable-dropdown" data-live-search="true" data-style="bootstrap-select-option">
				<option value="@null">Select Branch</option>
			</select>
			<span asp-validation-for="OrgBranchId" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-3">
		<label asp-for="PurchaseReasonId" class="col-sm-4 col-form-label"></label>
		<div class="col-sm-8">
			<select asp-for="PurchaseReasonId" asp-items="Model.PurchaseReasonSelectList.CustomSelectListToSelectList()" class="searchable-dropdown" data-live-search="true" data-style="bootstrap-select-option">
				<option value="@null">Select Reason</option>
			</select>
			<span asp-validation-for="PurchaseReasonId" class="text-danger"></span>
		</div>
	</div>

	<div class="row mb-3">
		<label asp-for="VendorId" class="col-sm-4 col-form-label"></label>
		<div class="col-sm-8">
			<select asp-for="VendorId" asp-items="Model.VendorSelectList.CustomSelectListToSelectList()" class="searchable-dropdown" data-live-search="true" data-style="bootstrap-select-option">
