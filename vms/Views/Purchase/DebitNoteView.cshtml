@model IEnumerable<vms.entity.models.ViewDebitNote>
@{
    var session = Context.Session.GetComplexData<VmUserSession>(ControllerStaticData.SESSION);
    ViewData["Title"] = "Mushak-6.8(Debit Note List)";
    Layout = "_LayoutMushak";
}

@section contentheader
    {
    <div class="p-3 page-header">
        @ViewData["Title"]
    </div>
}


@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.PurchaseInvoiceNo).Titled("Invoice No.");
    columns.Add(model => model.DebitNoteReturnDate).Titled("Return Date").Formatted("{0:dd/MM/yyyy}");
    columns.Add(model => model.PurchaseVoucherNo).Titled("Voucher No.");
    columns.Add(model => model.ReasonOfReturn).Titled("Reason Of Return");
    columns.Add(model => model.PurchaseDate).Titled("Purchase Date").Formatted("{0:dd/MM/yyyy}");
    columns.Add(model => model.VendorName).Titled("Vendor Name.");
    columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_DebitNoteViewActionMenu", data).Result)
                .Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
