	columns.Add(model => model.TotalPriceWithoutVat).Titled("Price (-VAT)").AppendCss("amount-quantity-cell list-table-td").Sortable(false).Formatted("{0:N2}");
	columns.Add(model => model.TotalVat).Titled("VAT").AppendCss("amount-quantity-cell list-table-td").Sortable(false).Formatted("{0:N2}");
	columns.Add(model => model.TotalSupplementaryDuty).Titled("SD").AppendCss("amount-quantity-cell list-table-td").Sortable(false).Formatted("{0:N2}");
	columns.Add(model => model.VDS).Titled("VDS").Sortable(false).AppendCss("text-align-center list-table-td");
