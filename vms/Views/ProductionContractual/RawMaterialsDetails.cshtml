@model IEnumerable<vms.entity.models.ContractualProductionTransferRawMaterialDetail>
@{
    ViewData["Title"] = "TransferedRawMaterials";

}

@section contentheader
{
    <div class="p-3 page-header">
        Transfered Raw Materials Details
    </div>
}
    

<div class="row mt-3">
    <div class="col-12">
        <table class="table table-bordered table-responsive text-center">
            <thead>
                <tr>

                    <th>
                        <b>Raw Material</b>
                    </th>
                    <th>
                        <b>Measurement Unit</b>
                    </th>
                    <th>
                        <b>Quantity</b>
                    </th>

                </tr>
            </thead>

            @if (Model.Any())
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.RawMaterial.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MeasurementUnit.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>

                        </tr>
                    }
                </tbody>
            }

            else
            {
                <tr>
                    <td colspan="10">
                        <p class="text-center">No Records Found</p>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

    <div class="form-actions">
        <div class="row mb-2">
            <div class="col-md-12 pt-3 pl-5">
                <a asp-action="TransferRawMaterialList" asp-route-fromDate="@Model.FirstOrDefault().FromDateEn" asp-route-toDate="@Model.FirstOrDefault().TodateEn" class="btn btn-info"><i class="bi bi-arrow-90deg-left"></i> Back</a>
            </div>
        </div>
    </div>
