@model IEnumerable<vms.entity.models.DistrictOrCity>
@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.DistrictOrCityName).Titled("Name");
    
    columns.Add(model => model.DistrictOrCityShortName).Titled("Short Name");
    columns.Add(model => model.DivisionOrState.DivisionOrStateName).Titled("Division Or State");
	columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenu", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable())