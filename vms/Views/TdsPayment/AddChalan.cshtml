@model vms.entity.viewModels.vmAddChallanForMushakReturnPayment
@{
    ViewData["Title"] = "Add Challan";

}

@section contentheader
    {
    <div class="p-3 page-header">
        @ViewData["Title"]
    </div>
}

<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="AddChalan" class="form-horizontal" id="frmusercreate">
            @Html.HiddenFor(c => c.MushakReturnPaymentId)
            <div class="form-body">

                <div class="form-group mt-3">
                    <label asp-for="TreasuryChallanNo" class="control-label"></label>
                    <div>
                        <input asp-for="TreasuryChallanNo" class="form-control" />
                        <span asp-validation-for="TreasuryChallanNo" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <label asp-for="SubmissionDate" class="control-label"></label>
                    <div>
                        <input type="date" asp-for="SubmissionDate" class="form-control" />
                        <span asp-validation-for="SubmissionDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
                        
            <div class="form-actions">
                <div class="mt-3 float-end">
                    <button type="submit" data-requiredconfirmation="true" class="btn btn-sm btn-success"><i class="bi bi-check-lg"></i> Submit</button>
                    <button type="button" value="Reset" onclick="location.reload();" class="btn  btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
                </div>
            </div>
                
            
        </form>
    </div>
</div>