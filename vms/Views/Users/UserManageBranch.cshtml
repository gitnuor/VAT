@using vms.Utility.Converter
@model vms.entity.viewModels.User.UserBranchUpdateViewModel
@{
    ViewData["Title"] = "Branch Update";


}
@section contentheader
    {
    <div class="p-3 page-header">
        Edit User Role
    </div>
}
<div class="row">
    <div class="col-md-4 offset-4">
        <form asp-action="UserManageBranch" class="form-horizontal" id="frmusercreate">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="EncryptedId" />
            <span asp-validation-for="UserId"></span>
            <div class="form-body">


                <div class="form-group mt-3">
                    <div class="form-group mb-3 form-group-checkbox">
                        <div class="form-check form-switch">
                            <input type="checkbox" asp-for="IsRequireBranch" class="form-check-input">
                            <label asp-for="IsRequireBranch" class="form-check-label"></label>
                            <span asp-validation-for="IsRequireBranch"></span>
                        </div>
                    </div>
                </div>

            </div>

            <partial name="_UpdateUserBranch" model="Model" />

            <div class="float-end mt-3">
                <button type="submit" data-requiredconfirmation="true" class="btn  btn-primary btn-sm"><i class="bi bi-check-lg"></i> Update</button>
                <button type="button" value="Reset" class="btn  btn-warning btn-sm" onclick="location.reload();"><i class="bi bi-arrow-repeat"></i> Reset</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
            </div>

        </form>
    </div>
</div>
@section Scripts{

    <script src="~/CustomJs/UserBranchUpdate.js?vguid=@ViewStaticData.StaticFileVersionGuid"></script>

}