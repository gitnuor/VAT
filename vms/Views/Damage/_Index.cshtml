@model IEnumerable<vms.entity.models.Damage>
@(Html.Grid(Model).Build(columns =>
{
    columns.Add(model => model.VoucherNo).Titled("Voucher No");
    columns.Add(model => model.NbrverifierName).Titled("NBR Verifier Name");
    columns.Add(model => model.NbrverifierDesignation).Titled("NBR Verifier Designation");
	columns.Add().Encoded(false).RenderedAs(data => Html.PartialAsync("_ActionMenu", data).Result)
		.Titled(Html.Raw("<i class='bi bi-activity'></i>")).AppendCss("action-col-freez");
})
	.AppendCss("large-index-grid")
	.Empty("No data found")
	.Filterable(GridFilterType.Double)
	.Sortable()
	.Pageable())
