@model vms.entity.viewModels.VmSaleLocalSimplified

<div class="col-md-12">
	<div id="notificationArea"></div>
	<div class="font-weight-bold mt-3">
		Product List
	</div>
	<table id="productTable" class="table table-bordered form-table mt-3">
		<thead>
		<tr>
			<th>Product</th>
			<th>Stock</th>
			<th>M. Unit</th>
			<th>Price/Unit</th>
			<th>Quantity</th>
			<th>Price</th>
			@if (Model.IsImposeServiceCharge)
			{
				<th>Service Charge</th>
				<th>Taxable Price</th>
			}
			<th>Discount</th>
			<th>Price (-Disc)</th>
			<th>SD</th>
			<th>VAT-able Price</th>
			<th>VAT Type</th>
			<th>VAT</th>
			<th>Price (+SD+VAT)</th>
			<th>Price (+SD+VAT-Disc.)</th>
			<th></th>
		</tr>
		</thead>
		<tbody id="productTableBody">
		</tbody>
		<tfoot>
		<tr class="text-end">
			<th colspan="5">Total</th>
			<th id="productTotalPrice"></th>
			@if (Model.IsImposeServiceCharge)
			{
				<th id="productTotalServiceCharge"></th>
				<th id="productTotalTaxablePrice"></th>
			}
			<th id="productTotalDiscount"></th>
			<th id="productTotalPriceAfterDiscount"></th>
			<th id="productTotalSd"></th>
			<th id="productTotalVatablePrice"></th>
			<th></th>
			<th id="productTotalVat"></th>
			<th id="productTotalPriceWithVat"></th>
			<th id="productTotalPriceWithVatAfterDiscount"></th>
			<th></th>
		</tr>
		</tfoot>
	</table>
	<div class="d-none">
		@if (!Model.IsImposeServiceCharge)
		{
			<div id="productTotalServiceCharge"></div>
			<div id="productTotalTaxablePrice"></div>
		}
	</div>

</div>