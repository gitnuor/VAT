@model VmViewSimplifiedSales
@{
	ViewData["Title"] = "Upload Simplified Local Sales Without Payment";
	var session = Context.Session.GetComplexData<VmUserSession>
		(ControllerStaticData.SESSION);
}

@section contentheader
{
	<div class="p-3 pb-2 page-header">
		@ViewData["Title"]
		<div>

			<form asp-action="UploadSimplifiedLocalSaleWithoutPayment" enctype="multipart/form-data" class="row">
				<div class="col-3">
					<input asp-for="UploadedFile" class="form-control form-control-sm">
					<span asp-validation-for="UploadedFile" class="text-danger"></span>
				</div>
				<div class="col-2">
					<input type="submit" value="Upload" class="btn btn-primary btn-sm"/>
				</div>

			</form>
		</div>
	</div>
	<partial name="Sales/_SalesSubLink"/>
}

<div class="gray-slim-scroll-container">
	<div class="table-scroll-container">
		<partial name="_UploadedSimplifiedSales" model="Model.Salses"/>
	</div>
</div>