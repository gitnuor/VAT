@model vms.entity.viewModels.VmSaleExport
@{
    ViewData["Title"] = "Export (Foreign Sale)";

}

@section contentheader
{
    <div class="p-3 page-header">
        @ViewData["Title"]
        @*<a class="btn btn-sm btn-secondary float-end" asp-action="SaleLocal">Add Local Sale</a>*@
    </div>
}

<div class="row mt-3 form-margin">
    <partial name="_SaleExportMainInformation" model="Model" />
    <partial name="_SaleExportProductAdd" model="Model" />
    <partial name="_SaleExportProductList" model="Model" />
    <partial name="_SaleExportPayment" model="Model" />
    <partial name="_SaleExportDocument" model="Model" />

    <div class="col-md-12">
	    <label asp-for="SalesRemarks" class="form-label complex-form-label"></label>
	    <textarea asp-for="SalesRemarks" rows="2" class="form-control form-control-sm">
                 </textarea>
	    <span asp-validation-for="SalesRemarks" class="text-danger"></span>
    </div>
    <div class="col-md-12 mt-2">
	    <div class="float-end">
		    <button type="button" class="btn btn-success btn-sm" id="save"><i class="bi bi-check-lg"></i> Submit</button>
		    <button type="button" class="btn btn-primary btn-sm d-none" id="draft"><i class="bi bi-card-list"></i> Draft</button>
		    <button type="button" value="Reset" onclick="location.reload();" class="btn btn-warning btn-sm"><i class="bi bi-arrow-repeat"></i> Reset</button>
		    <a asp-action="Index" class="btn btn-secondary btn-sm"><i class="bi bi-slash-circle"></i> Cancel</a>
	    </div>
    </div>
</div>


@section Scripts{
    <script src="~/CustomJs/SaleExport.js?vguid=@ViewStaticData.StaticFileVersionGuid"></script>
}
