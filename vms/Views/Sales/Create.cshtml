<form method="post" id="salesLocal">
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="col-md-3 ">
                        <div class="form-group form-md-line-input">
                            <div>
                                <input type="text" class="form-control" id="InvoiceNo" name="InvoiceNo" placeholder="##">

                                <label class="labelColor" for="form_control_1">Invoice No.</label>
