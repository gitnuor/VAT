                    </div>
                    <div class="col-md-3 ">
                        <div class="form-group form-md-line-input">
                            <div>
                                <input type="text" class="form-control" id="CustomerContactNo" name="CustomerContactNo" placeholder="01#########">
                                <label class="labelColor" for="form_control_1">Mobile</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 ">
                        <div class="form-group form-md-line-input">
                            <div>
                                <input type="text" class="form-control" id="WorkOrderNo" name="WorkOrderNo" placeholder="##">
                                <label class="labelColor" for="form_control_1">Order No</label>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3 ">
                        <div class="form-group form-md-line-input has-info">

                            <select id="SalesDeliveryTypeId" name="SalesDeliveryTypeId" class="form-control" asp-items="ViewBag.SalesDeliveryTypeId"></select>
                            <label for="form_control_1">Delivery</label>
                        </div>
                    </div>
                    

                    <div class="col-md-3 ">
                        <div class="form-group form-md-line-input">
                            <div>
                                <input type="text" class="form-control" id="ExpectedDeleveryDate" name="ExpectedDeleveryDate" placeholder="2018-12-17" value="@DateTime.Now">
