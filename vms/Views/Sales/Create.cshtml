                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="col-md-12">
                    <h4>Payment</h4>
                    <table class="table table-bordered" id="payment">
                        <thead>
                            <tr>
                                <th>Serial</th>
                                <th>Method</th>
                                <th>Paid</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <td></td>
                                <td class="form-group form-md-line-input has-info">
                                    <select id="PaymentMethodId" name="PaymentMethodId" class="form-control" asp-items="ViewBag.PaymentMethodId"></select>
                                </td>
                                <td class="form-group form-md-line-input">
                                    <div>
                                        <input type="text" name="PaidAmount" id="PaidAmount" class="form-control" />
                                    </div>
                                </td>
                                <td class="form-group form-md-line-input">
                                    <div>
                                        <input type="text" name="PaymentDate" id="PaymentDate" class="form-control" value="@DateTime.Now" />
                                    </div>
                                </td>
                                <td>
                                    <a id="addPayment" class="btn btn-sm btn-success" aria-label="Left Align">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
