@model vms.entity.viewModels.SalesPriceAdjustment.SalesPriceAdjustmentCreditNoteViewModel
<div class="font-weight-bold mb-3 form-2">
	Product Information
	<form class="row g-3 detail-form" id="frmProductInformation">

		<div class="col-md-6 complex-form-col">
			<label asp-for="SalesDetailId" ></label>
			<select asp-for="SalesDetailId" >
				<option value="@null">Select Product</option>
				@if (Model.SalesDetails.Any())
				{
					foreach (var product in Model.SalesDetails)
					{
						<option value="@product.SalesDetailId"
								data-Measurement-Unit-Id="@product.MeasurementUnitId"
								data-Measurement-Unit-Name="@product.MeasurementUnit.Name"
								data-Sd="@product.SupplementaryDutyPercent"
								data-Vat="@product.Vatpercent"
								data-Quantity="@product.Quantity"
								data-UnitPrice="@product.UnitPrice"
								data-SalesDetailId="@product.SalesDetailId">
							@product.Product.Name
						</option>
					}
				}
			</select>
			<span asp-validation-for="SalesDetailId" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="MeasurementUnitName" ></label>
			<input type="text" hidden asp-for="MeasurementUnitId" readonly >
			<input type="text" asp-for="MeasurementUnitName" readonly >
			<span asp-validation-for="MeasurementUnitName" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="Quantity" ></label>
			<input type="text" asp-for="Quantity" readonly >
			<span asp-validation-for="Quantity" ></span>
		</div>


		<div class="col-md-3 complex-form-col">
			<label asp-for="UnitPrice" ></label>
			<input type="text" asp-for="UnitPrice" readonly >
			<span asp-validation-for="UnitPrice" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="Amount" ></label>
			<input type="text" asp-for="Amount" readonly >
			<span asp-validation-for="Amount" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="VatPercent" ></label>
			<input type="text" asp-for="VatPercent" readonly >
			<span asp-validation-for="VatPercent" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="Vat" ></label>
			<input type="text" asp-for="Vat" readonly >
			<span asp-validation-for="Vat" ></span>
		</div>


		<div class="col-md-3 complex-form-col">
			<label asp-for="SdPercent" ></label>
			<input type="text" asp-for="SdPercent" readonly >
			<span asp-validation-for="SdPercent" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="Sd" ></label>
			<input type="text" asp-for="Sd" readonly >
			<span asp-validation-for="Sd" ></span>
		</div>


		<div class="col-md-3 complex-form-col">
			<label asp-for="QuantityToChange" ></label>
			<input type="text" asp-for="QuantityToChange" >
			<span asp-validation-for="QuantityToChange" ></span>
		</div>


		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeAmountPerItem" ></label>
			<input type="text" asp-for="ChangeAmountPerItem" >
			<span asp-validation-for="ChangeAmountPerItem" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeAmount" ></label>
			<input type="text" asp-for="ChangeAmount" readonly >
			<span asp-validation-for="ChangeAmount" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeVatPercent" ></label>
			<input type="text" asp-for="ChangeVatPercent" readonly >
			<span asp-validation-for="ChangeVatPercent" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeVat" ></label>
			<input type="text" asp-for="ChangeVat" readonly >
			<span asp-validation-for="ChangeVat" ></span>
		</div>


		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeSdPercent" ></label>
			<input type="text" asp-for="ChangeSdPercent" readonly >
			<span asp-validation-for="ChangeSdPercent" ></span>
		</div>

		<div class="col-md-3 complex-form-col">
			<label asp-for="ChangeSd" ></label>
			<input type="text" asp-for="ChangeSd" readonly >
			<span asp-validation-for="ChangeSd" ></span>
		</div>


		<div class="col-md-9 complex-form-col">
			<label asp-for="ReasonOfChangeInDetail" ></label>
			<input type="text" asp-for="ReasonOfChangeInDetail" >
			<span asp-validation-for="ReasonOfChangeInDetail" ></span>
		</div>

		<div class="col-md-2 mt-2">
			<button type="button" class="btn  btn-primary btn-sm inline-sm-button-complex-form w-100" id="btnAddProduct"><i class="bi bi-plus-lg"></i> Add</button>
		</div>
		<div class="col-md-2 mt-2">
			<button type="button" class="btn  btn-warning btn-sm inline-sm-button-complex-form w-100" id="btnResetProduct"><i class="bi bi-arrow-repeat"></i> Reset</button>
		</div>
	</form>
</div>
